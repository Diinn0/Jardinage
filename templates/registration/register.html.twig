{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
    .registerButton, .registerButton:hover {
        background-color: #55D400;
    }

    </style>
{% endblock %}
{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


<div class="jumbotron jumbotron-fluid">
  <div class="container">
        <img class="mx-auto d-block" src="{{ asset('assets/images/grenouilleContent3.svg') }}" alt="logo" width="250px" height="150px">
        <h1 class="display-4 text-center">S'inscrire</h1>
  </div>
</div>


    <div class="container">
    <div class="row mt-3">
        <div class="col-md-2"></div>
        <div class="col-md-8">

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname, {
                label: 'Pr√©nom'
            }) }}
            {{ form_row(registrationForm.lastname, {
                label: 'Nom'
            }) }}
            {{ form_row(registrationForm.username, {
                label: 'Pseudonyme'
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse mail'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn registerButton">M'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}

        </div>
        <div class="col-md-2"></div>
    
    </div>
    </div>
{% endblock %}
